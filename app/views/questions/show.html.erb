<p id="notice"><%= notice %></p>

<h1><%= @event.name %></h1>

<%= link_to "Home", root_path %>
<%= link_to "Back", :back %>

<p>
  <strong>Question:</strong>
  <%= @question.questions %>
</p>

<br>

<%= link_to 'New Answer', new_question_answer_path(params[:id]) %>

<br>

<table>
  <thead>
    <tr>
      <th>Answers:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.answers %></td>
        <td><%= link_to 'Show', question_answers_path(params[:id]) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>